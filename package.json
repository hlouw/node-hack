{
  "name": "node-hack",
  "version": "1.0.0",
  "description": "Hack around with Node.js",
  "main": "src/app.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "npm run build -- -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "node dist/app.js",
    "serve:watch": "nodemon --watch dist dist/app.js",
    "start": "npm run build && npm run serve",
    "start:watch": "npm run build:watch & npm run serve:watch & wait",
    "dev": "npm run build && npm run start:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hlouw/node-hack.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hlouw/node-hack/issues"
  },
  "homepage": "https://github.com/hlouw/node-hack#readme",
  "dependencies": {
    "restify": "^4.3.0",
    "typescript": "^2.1.4"
  },
  "devDependencies": {
    "@types/node": "^6.0.54",
    "@types/restify": "^2.0.35",
    "nodemon": "^1.11.0"
  }
}

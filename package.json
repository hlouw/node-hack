{
  "name": "node-hack",
  "version": "1.0.0",
  "description": "Hack around with Node.js",
  "main": "src/app.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "npm run build -- -w",
    "lint": "tslint --force src/** src/**/*",
    "test": "npm run build && mocha \"built/src/**/*.spec.js\"",
    "test:watch": "mocha -w \"built/src/**/*.spec.js\"",
    "serve": "node built/src/app.js",
    "serve:watch": "nodemon --watch built/src built/src/app.js",
    "start": "npm run build && npm run serve",
    "start:watch": "npm run build:watch & npm run test:watch & npm run serve:watch & wait",
    "dev": "npm run build && npm run start:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hlouw/node-hack.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hlouw/node-hack/issues"
  },
  "homepage": "https://github.com/hlouw/node-hack#readme",
  "dependencies": {
    "restify": "^4.3.0",
    "typescript": "^2.1.4"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/chai-http": "0.0.29",
    "@types/mocha": "^2.2.35",
    "@types/node": "^6.0.54",
    "@types/restify": "^2.0.35",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "tslint": "^4.2.0"
  }
}
